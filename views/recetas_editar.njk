{% extends "base.njk" %}

{% block titulo %}Editar receta{% endblock %}

{% block contenido %}
<form action="/recetas/{{fichareceta.id}}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Nombre:
                <input type="text" class="form-control" name="titulo" 
                placeholder="Nombre de la receta" value="{{fichareceta.titulo}}">
            </label>
        </div>
        <div class="form-group">
            <label>Imagen:
                <input type="file" class="form-control" name="imagen">
            </label>
        </div>
        <div class="form-group">
            <label>Comensales:
                <input type="number" class="form-control" name="comensales"
                placeholder="Comensales" value="{{fichareceta.comensales}}">
            </label>
        </div>
        <div class="form-group">
            <label>Tiempo de preparación:
                <input type="number" class="form-control" name="preparacion"
                placeholder="Tiempo de preparación de la receta" value="{{fichareceta.preparacion}}">
            </label>
        </div>
        <div class="form-group">
            <label>Tiempo de cocción:
                <input type="number" class="form-control" name="coccion"
                placeholder="Tiempo de cocción de la receta" value="{{fichareceta.coccion}}">
            </label>
        </div>
        <div class="form-group">
            <label>Descripción:
                <input type="text" class="form-control" name="descripcion"
                placeholder="Descripción de la receta" value="{{fichareceta.descripcion}}">
            </label>
        </div>
        <button type="submit" class="btn btn-primary">
            Guardar cambios
        </button>
    </form>
{% endblock %}